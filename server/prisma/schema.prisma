generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Video {
  id          Int     @id @default(autoincrement())
  title       String?
  seriesNr    Int?
  seriesTotal Int?
  studio      String?
  models      Model[] @relation("VideoModels")
  tags        Tag[]   @relation("VideoTags")
}

model Tag {
  id     Int     @id @default(autoincrement())
  title  String? @unique
  videos Video[] @relation("VideoTags")
}

model Model {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  alias  String?
  videos Video[] @relation("VideoModels")
}
